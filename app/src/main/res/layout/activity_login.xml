<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoginActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/zhixue_green"
                android:textSize="16sp"
                android:layout_margin="3dp"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:padding="5dp"
                android:background="@drawable/grey_circle_corner_lined_background"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="账号"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/et_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@drawable/grey_circle_corner_background"
                    android:textColorHint="@color/text_grey"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:hint="请输入您的账号"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="密码"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:background="@drawable/grey_circle_corner_background"
                    android:textColorHint="@color/text_grey"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:hint="请输入您的密码"/>
        </LinearLayout>
<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
            android:id="@+id/bt_login"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="登录"
            android:layout_margin="2dp"
            android:background="@drawable/bg_green_button"
            android:layout_gravity="center"/>
    <com.akexorcist.roundcornerprogressbar.indeterminate.IndeterminateCenteredRoundCornerProgressBar
            android:id="@+id/pg_login"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_margin="8dp"
            app:rcAnimationSpeedScale="1"
            app:rcBackgroundColor="#0A000000"
            app:rcProgressColor="@color/zhixue_green"
            android:layout_gravity="center"
            android:visibility="gone"/>
</FrameLayout>

    </LinearLayout>
</ScrollView>